{
    "services": [
        {
            "name": "solr",
            "build": {
                "dockerfile": "Dockerfile"
            }
        },
        {
            "name": "python-app",
            "env": "python",
            "build": {
                "nixpacksConfig": {
                    "installCommand": "pip install -r python-app/requirements.txt"
                }
            },
            "runCommand": "python3 python-app/solr_connector.py"
        }
    ]
}